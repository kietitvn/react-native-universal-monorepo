{
  "name": "VanNews",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@react-native-async-storage/async-storage",
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-codegen",
      "**/i18next",
      "**/react-i18next"
    ]
  },
  "scripts": {
    "mobile:clean": "yarn workspace @my-app/mobile clean",
    "android": "yarn workspace @my-app/mobile android",
    "android:start": "yarn workspace @my-app/mobile start",
    "android:studio": "yarn workspace @my-app/mobile studio",
    "ios": "yarn workspace @my-app/mobile ios",
    "ios:start": "yarn workspace @my-app/mobile start",
    "ios:xcode": "yarn workspace @my-app/mobile xcode",
    "ios:pods": "yarn workspace @my-app/mobile pods",
    "next:dev": "yarn workspace @my-app/next dev",
    "next:build": "yarn workspace @my-app/next build",
    "next:start": "yarn workspace @my-app/next start",
    "lint": "ultra -r lint",
    "lint:fix": "ultra -r lint:fix",
    "test": "ultra -r test",
    "typecheck": "ultra -r typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-native": "^3.11.0",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2",
    "ultra-runner": "^3.10.5"
  }
}
